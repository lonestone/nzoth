{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "strict": true,
    "strictBindCallApply": false,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    // Changes to allow importing the shared ESM packages (which are also built for CJS, but TS needs to find the right version)
    // eslint-disable-next-line jsonc/sort-keys
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "preserveWatchOutput": true
  },
  // For ts-node to resolve the paths correctly (like from root src/...)
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
}
