/* eslint-disable jsonc/sort-keys */
{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "bundler",
    
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,

    // Ensure a correct output
    "baseUrl": ".",
    "rootDir": "src",

    // Ensure declarations and sourcemaps are generated
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Strictness
    "strict": true,
    "strictBindCallApply": false,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,

    // Other options
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    // Prevent emit in source directory
    "noEmitOnError": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
