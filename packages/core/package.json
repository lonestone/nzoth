{
  "name": "@lonestone/nzoth",
  "version": "1.1.4",
  "private": false,
  "packageManager": "pnpm@9.15.0",
  "description": "NZOTH: Nest + Zod + OpenAPI + Typed + Helpers - Build fully type-safe REST APIs with NestJS",
  "author": "Lonestone",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lonestone/nzoth.git"
  },
  "bugs": {
    "url": "https://github.com/lonestone/nzoth/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "nestjs",
    "rest",
    "api",
    "zod",
    "validation",
    "openapi",
    "swagger",
    "typescript"
  ],
  "exports": {
    "./client": {
      "types": "./dist/cjs/client.d.ts",
      "import": "./dist/esm/client.js",
      "require": "./dist/cjs/client.js"
    },
    "./server": {
      "types": "./dist/cjs/server.d.ts",
      "import": "./dist/esm/server.js",
      "require": "./dist/cjs/server.js"
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "files": [
    "/dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm build:esm && pnpm build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "dev": "tsc --watch -p tsconfig.esm.json",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/swagger": "^11.0.1",
    "rxjs": "^7.8.2",
    "zod": "4.1.13",
    "zod-openapi": "^5.4.5"
  },
  "devDependencies": {
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.24",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.6.1",
    "supertest": "^7.0.0",
    "typescript": "5.4.2",
    "vitest": "^1.6.1"
  }
}
